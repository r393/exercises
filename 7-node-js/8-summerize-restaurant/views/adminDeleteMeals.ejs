<script>
   $('.mealdeletbtn').click(function (e) {
       e.preventDefault()
       //alert($(this).attr('mealid'))
       if(confirm("are you sure you want to delete this meal?")){
            $.ajax({
                type: "POST",
                url: "/admin/deletemeal",
                data:{ mealid: $(this).attr('mealid')} ,
                //dataType: "json",
                success: function () {
                    //alert('deleted')
                    //delete the parent div which contains the elemnet from the dom instantly
                    $(e.target).parent().parent().parent().remove()//this will delete instantly
                },
                error: function(error){
                    console.log(error);
                    
                }
                
            });   
        }   
       
   });
</script>

